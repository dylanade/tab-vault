{
  "manifest_version": 3,
  "name": "Session Saver",
  "version": "1.0",
  "description": "Saves and restores all tabs on Chrome restart.",
  "permissions": ["tabs", "storage", "sessions"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
